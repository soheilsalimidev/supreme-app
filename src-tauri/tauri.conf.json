{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./resources/*.jar",
      "./resources/lib64/*",
      "./resources/app.apk"
    ],
    "externalBin": ["./binaries/zipalign"],
    "active": true,
    "targets": ["deb", "msi", "nsis", "app", "dmg"],
    "linux": {
      "deb": {
        "files": {
          "/usr/lib64": "./resources/lib64-linux/"
        }
      }
    }
  },
  "productName": "web2app",
  "mainBinaryName": "web2app",
  "version": "0.0.0",
  "identifier": "com.soheilsalimi.iapp",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "web2app",
        "width": 1080,
        "minWidth": 720,
        "minHeight": 800,
        "decorations": false
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["**/*"],
        "enable": true
      },
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; object-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost"
    }
  }
}
