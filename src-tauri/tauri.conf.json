{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "web2app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true,
        "save": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**/*"
        ]
      },
      "fs": {
        "scope": [
          "$RESOURCE/*"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "deb": {
        "files": {
          "/usr/lib64": "./resources/lib64-linux/"
        }
      },
      "resources": [
        "./resources/*.jar",
        "./resources/lib64"
      ],
      "externalBin": [
        "./binaries/zipalign"
      ],
      "active": true,
      "targets": [
        "deb",
        "msi",
        "nsis",
        "app",
        "dmg"
      ],
      "identifier": "com.soheilsalimi.iapp",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; object-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "web2app",
        "width": 1080,
        "minWidth": 720,
        "minHeight": 900
      }
    ]
  }
}
